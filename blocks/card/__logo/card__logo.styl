.card {
    &__logo {
        position: absolute;
        left: 27px;

        border: 0;

        span {
            position: absolute;
            left: -9999px;
        }
    }

    &__side_lang_ru &__logo {
        width: 98px;
        height: 42px;
        top: 127px;

        background-image: url('card__logo_lang_ru.svg');
        background-size: 98px 42px;
    }

    &__side_lang_en &__logo {
        width: 102px;
        height: 42px;
        top: 127px;

        background-image: url('card__logo_lang_en.svg');
        background-size: 102px 42px;
    }
}
